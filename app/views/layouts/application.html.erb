<!DOCTYPE html>
<html>
  <head>
    <title>Parkfun</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
<nav class="navbar navbar-inverse" style="background-color: #00CC00">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#gnavi">
          <span class="sr-only">メニュー</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>


          <%= link_to(("/"), :style=>"text-decoration: none;", data: {"turbolinks" => false}) do %>
           <span class="rogo" style="color: white; text-decoration: none; font-size: 55px; padding-bottom: 50px;">Nagano Cake</span>
         <% end %>

      </div>


      <nav id="gnavi" class="collapse navbar-collapse">
        <ul class="nav navbar-nav navbar-right" style="font-size: 16px">
          <!-- 会員ログイン後 -->
          <% if user_signed_in? %>
            <li class="user" style="margin-right: 30px">ようこそ、　<%= current_user.name %>　さん！</li>
            <li><%= link_to "アバウト", home_about_path %></li>
            <li><%= link_to "マイページ", user_path(current_user.id) %></li>
            <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>


          <!-- 非ログイン -->
          <% else %>
            <li><%= link_to "アバウト", home_about_path %></li>
            <li><%= link_to "新規登録", new_user_registration_path, data: {"turbolinks" => false} %></li>
            <li><%= link_to "ログイン", new_user_session_path %></li>
          <% end %>
        </ul>
      </nav>
    </nav>
    <%= yield %>
  </body>
</html>
