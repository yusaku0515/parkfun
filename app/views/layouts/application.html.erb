<!DOCTYPE html>
<html>
  <head>
    <title>Parkfun</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
     <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <%= javascript_include_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>


  </head>

  <body>
    <nav class="navbar navbar-inverse" style="background-color: #00CC00">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#gnavi">
          <span class="sr-only">メニュー</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <% if admin_signed_in? %>
          <%= link_to( admins_homes_top_path, :style=>"text-decoration: none;", data: {"turbolinks" => false}) do %>
            <span class="rogo" style="color: white; text-decoration: none; font-size: 45px;">ParkFun</span>
         <% end %>
        <% else %>
          <%= link_to(("/"), :style=>"text-decoration: none;", data: {"turbolinks" => false}) do %>
            <span class="rogo" style="color: white; text-decoration: none; font-size: 55px; padding-bottom: 50px;">ParkFun</span>
          <% end %>
        <% end %>
      </div>
      <nav id="gnavi" class="collapse navbar-collapse">
        <ul class="nav navbar-nav navbar-right" style="font-size: 16px">
          <% if user_signed_in? %><!-- 会員ログイン後 -->
            <li class="user" style="margin-right: 30px">ようこそ、　<%= current_user.name %>　さん！</li>
            <li><%= link_to "マイページ", user_path(current_user.id) %></li>
            <li><%= link_to "アバウト", home_about_path %></li>
            <li><%= link_to "公園検索", search_path %></li>
            <li><%= link_to "投稿一覧", posts_path %></li>
            <li><%= link_to "投稿する", new_post_path %></li>
            <li><%= link_to "通知", notifications_path, class: "btn-default" %></li>
            <li><%= link_to "お問い合わせ", contacts_new_path %></li>
            <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
          <% elsif admin_signed_in? %><!-- 管理者ログイン後 -->
            <li class="user" style="margin-right: 30px">管理者ログイン中</li>
            <li><%= link_to "投稿一覧", admins_posts_path %></li>
            <li><%= link_to "会員一覧", admins_users_path %></li>
            <li><%= link_to "投稿する", new_post_path %></li>
            <%# if unchecked_notifications.any? %>
              <!-- <i class="fa fa-circle" style="color: gold;"></i> -->
            <%# end %>
            <li><%= link_to "通知", notifications_path, class: "btn-default" %></li>
            <li><%= link_to "ログアウト", destroy_admin_session_path, method: :delete %></li>
          <% else %><!-- 非ログイン -->
            <li><%= link_to "アバウト", home_about_path %></li>
            <li><%= link_to "新規登録", new_user_registration_path, data: {"turbolinks" => false} %></li>
            <li><%= link_to "ログイン", new_user_session_path %></li>
            <li><%= link_to "管理者用ログイン", new_admin_session_path %></li>
          <% end %>
        </ul>
      </nav>
    </nav>

    <%= yield %>

  </body>
</html>
