<div class="container">
	<div class="row">
		<div class="col-sm-3">
			<%= render 'posts/tag_list', tag_list: @tag_list %>
		</div>
		<div class="col-xs-12 col-sm-9">

			<!-- サクセスメッセージ -->
			<% if flash[:notice] %>
				<div class="flash">
					<%= flash[:notice] %>
				</div>
			<% end %>

			<h4>投稿一覧</h4>
			<% @posts.each do |post| %>
				<div class="indexpost">
					<%= link_to post_path(post.id), 'data-turbolinks': false do %>
						<%= attachment_image_tag post, :post_image, :fill, 200, 200, fallback: "profile1.jpg", size: "200x200" %><br>
						<td><%= link_to post.title, post_path(post.id) %></td>
					<% end %>
				</div>
			<% end %>

		</div>
	</div>
</div>