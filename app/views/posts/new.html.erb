<div class="container">
	<div class="row">
		<div class="col-lg-3"></div>
		<!-- エラー文表示 -->
		<%= render "devise/shared/error_messages", resource: @post %>
		<div class="col-lg-6">
			<h1>新規投稿</h1>
				<%= form_for(@post) do |f| %>

			    <h4>タイトル</h4>
			    <%= f.text_field :title %>

			    <h4>本文</h4>
			    <%= f.text_area :body %>

			    <h4>住所</h4>
			    <%= f.text_field :address %>

			    <h4>タグ</h4>
				    <%= f.text_field :tag_name, value: @tag_list, class: "form-control", autocomplete: "半角スペースで区切ってもらうと複数入力する事ができます" %>

				<h4>画像</h4>
				<%= f.attachment_field :post_image %>

			    <%= f.submit '投稿', :style=>"margin-top:10px;" %>

			<% end %>
		</div>
		<div class="col-lg-3"></div>
	</div>
</div>