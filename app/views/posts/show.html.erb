<div class="container">
	<div class="row">
		<div class="col-sm-3">

		</div>
		<div class="col-xs-12 col-sm-9">

			<!-- サクセスメッセージ -->
			<% if flash[:notice] %>
				<div class="flash">
					<%= flash[:notice] %>
				</div>
			<% end %>

			<!-- 投稿一覧 -->
	<!-- 	<div id="post_lists">
			<%#= render partial: 'post_list', locals: { post: @posts } %>
			</div> -->
			<h4>投稿詳細</h4>
			<%= @post.title %>
			<% if @post.post_image.present? %>
				<% @post.post_image.each do |image| %>
				    <%= attachment_image_tag image, :image, :fill, 200, 200 %>
		    	<% end %>
			<% else %>
				<%= image_tag 'profile1.jpg', size: '200x200' %>
			<% end %>
			<% @post.tag each do |t| %>
				<% link_to t.tag_name, posts_path(tag_id: t.id) %>
			<% end %>
		</div>
	</div>
</div>