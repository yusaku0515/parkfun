<div class="container">
	<div class="row">
		<h2>公園検索</h2>
		<div class="col-xs-12 col-sm-10">
		    <% if params[:keyword] %>
				<div id="search">
					<%= render 'post_search', searched_posts: @searched_posts %>
				</div>
			<% else %>
				<div class="text-left" style="margin: 10px;">
				    <%= form_tag(search_path, method: "get", id: "search", remote: true) do %>
				        <%= text_field_tag :keyword, params[:keyword], placeholder:"キーワードを入力すると該当する投稿が表示されます" %>
				        <%= submit_tag 'Search' %>
				    <% end %>
				</div>
			<% end %>
		</div>
	</div>
</div>